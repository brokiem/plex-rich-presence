<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PlexRichPresence.ViewModels;assembly=PlexRichPresence.ViewModels"
             xmlns:plex-account="clr-namespace:Plex.ServerApi.PlexModels.Account;assembly=Plex.ServerApi"
             xmlns:ia="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="720"
             x:Class="PlexRichPresence.UI.Avalonia.Views.ServersPage"
             x:DataType="viewModels:ServersPageViewModel">
    
    <Grid>
        <!-- Loading State -->
        <StackPanel IsVisible="{Binding GetDataCommand.IsRunning}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="16">
            <ProgressBar IsIndeterminate="True" 
                         Width="200"
                         Classes="circular"/>
            <TextBlock Text="Loading your servers..."
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer IsVisible="{Binding !GetDataCommand.IsRunning}"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" Margin="32">
                
                <!-- Header with Back Button -->
                <Button Command="{Binding GoBackCommand}"
                        HorizontalAlignment="Left"
                        Classes="Subtle"
                        ToolTip.Tip="Go back">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ia:Icon Value="fa-solid fa-chevron-left" FontSize="12"/>
                        <TextBlock Text="Back"/>
                    </StackPanel>
                </Button>
                
                <!-- User Profile Header -->
                <Border Classes="card">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Avatar -->
                        <Border Classes="avatar" Grid.Column="0">
                            <Image x:Name="profilePicture" Stretch="UniformToFill"/>
                        </Border>
                        
                        <!-- User Info -->
                        <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="{CompiledBinding Username}" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="Plex Account" FontSize="12" Opacity="0.6"/>
                        </StackPanel>
                        
                        <!-- Logout Button -->
                        <Button Grid.Column="2"
                                Command="{Binding LogOutCommand}"
                                VerticalAlignment="Center"
                                ToolTip.Tip="Sign out of your Plex account">
                            <TextBlock Text="Sign Out" FontSize="13"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Server Selection -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Select a Server" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock Text="Choose the Plex server you want to display activity from"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    
                    <Border Classes="card-secondary" Margin="0,8,0,0">
                        <StackPanel Spacing="12">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Your Servers" FontWeight="SemiBold"/>
                                <ComboBox HorizontalAlignment="Stretch"
                                          ItemsSource="{CompiledBinding Servers}"
                                          SelectedItem="{CompiledBinding SelectedServer}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="plex-account:AccountServer">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <ia:Icon Value="fa-solid fa-server" FontSize="14" 
                                                         Opacity="0.6"/>
                                                <TextBlock Text="{CompiledBinding Name}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Manual Configuration Expander -->
                <Expander Header="Advanced: Manual Server Configuration">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <ia:Icon Value="fa-solid fa-cog" FontSize="14" 
                                         Opacity="0.6"/>
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                    
                    <Border Classes="card-secondary" Margin="0,16,0,0">
                        <StackPanel Spacing="16">
                            <!-- Use Custom Server Toggle -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Use Custom Server" FontWeight="SemiBold"/>
                                    <TextBlock Text="Connect to a server not in your account" FontSize="12" Opacity="0.6"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" 
                                              IsChecked="{CompiledBinding UseCustomServer}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- Server IP -->
                            <StackPanel Spacing="6" IsEnabled="{CompiledBinding UseCustomServer}">
                                <TextBlock Text="Server IP Address" FontWeight="SemiBold"/>
                                <TextBox Text="{CompiledBinding CustomServerIp}"
                                         Watermark="e.g., 192.168.1.100"/>
                            </StackPanel>
                            
                            <!-- Server Port -->
                            <StackPanel Spacing="6" IsEnabled="{CompiledBinding UseCustomServer}">
                                <TextBlock Text="Server Port" FontWeight="SemiBold"/>
                                <TextBox Text="{CompiledBinding CustomServerPort}"
                                         Watermark="e.g., 32400"/>
                            </StackPanel>
                            
                            <!-- Is Server Owned Toggle -->
                            <Grid ColumnDefinitions="*,Auto" IsEnabled="{CompiledBinding UseCustomServer}">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="I own this server" FontWeight="SemiBold"/>
                                    <TextBlock Text="Enable additional features for server owners" FontSize="12" Opacity="0.6"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" 
                                              IsChecked="{CompiledBinding IsCustomServerOwned}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Expander>
                
                <!-- Continue Button -->
                <Button Classes="accent" 
                        Command="{Binding ValidateServerSelectionCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0">
                    <TextBlock Text="Continue" FontWeight="SemiBold"/>
                </Button>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
